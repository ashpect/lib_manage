{% extends "templates/base.twig" %}

{% block title %}My website home{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/assets/styles/login.css" /> 
{% endblock %}

{% block body %}

<h1 align="center">Hello, Welcome to Library Management System !</h1>

<div class="login-page">
  <div class="form">
    <form class="login-form" action="/signup" method="POST">
      <input type="text" name="username" placeholder="Username"/>
      <input type="password" name="password" placeholder="Password"/>
      <input type="confirmpassword" name="confirmpassword" placeholder="Confirm password"/>
      <button>Signup</button>
      <p class="message">Already registered? <a href="../login">Login Instead</a></p>
    </form>
  </div>                          
</div>

{% endblock %}
