{% extends "templates/base.twig" %}

{% block css %}
    <link rel="stylesheet" href="/assets/styles/login.css" /> 
{% endblock %}

{% block body %}

<div class="hello"><h1>Hello, Welcome to Library Management System !</h1></div>

<div class="login-page">
  <div class="form">
    <form class="login-form" action="/user_signup" method="POST">
      <input type="text" name="username" placeholder="Username"/>
      <input type="password" name="password" placeholder="Password"/>
      <input type="password" name="confirmpassword" placeholder="Confirm password"/>
      <button>Signup</button>
      <p class="message">Already registered? <a href="../login">Login Instead</a></p>
      <p class="message">Sign up as admin instead? <a href="../admin_signup"> Admin Sign-Up</a></p>
    </form>
  </div>                          
</div>

{% endblock %}
